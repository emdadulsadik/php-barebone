{
  "name": "mdemdadulsadik/php-barebone",
  "description": "PHP project using Symfony's DI, config, routing, env, and PHPUnit",
  "type": "project",
  "require": {
    "php": ">=8.2",
    "symfony/dependency-injection": "^7.0",
    "symfony/config": "^7.0",
    "symfony/yaml": "^7.0",
    "symfony/routing": "^7.0",
    "symfony/http-foundation": "^7.0",
    "symfony/dotenv": "^7.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^11.0"
  },
  "autoload": {
    "psr-4": {
      "App\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "scripts": {
    "test": "phpunit"
  },
  "minimum-stability": "stable",
  "prefer-stable": true
}
